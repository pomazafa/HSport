<style>
	input[type=button], input[type=submit], input[type=reset] {
  background-color: #4CAF50;
  border: none;
  color: white;
  padding: 16px 32px;
  text-decoration: none;
  margin: 4px 2px;
  cursor: pointer;
}
textarea {
  width: 100%;
  height: 150px;
  padding: 12px 20px;
  box-sizing: border-box;
  border: 2px solid #ccc;
  border-radius: 4px;
  background-color: #f8f8f8;
  resize: none;
}

input[type=text], input[type=number] {
  background-color: bisque;
  padding-left: 40px;
  color:black;
}

</style>


<form action="/catalog/add" method="POST" enctype="multipart/form-data">
  <!--   не удалять id error-message-->
  <span id="error-message">{{errMessage}}</span><br>
  <label for="pname">Название продукта:</label><br>
  <!--   не удалять id pname -->
  <input type="text" id="pname" name="pname" value="{{form.pname}}"></input><br>
  <label for="pdescription">Описание:</label><br>
  <textarea id="pdescription" name="pdescription">{{form.pdescription}}</textarea><br><br>
  <label for="pbrand">Бренд:</label><br>
  <input type="text" id="pbrand" name="pbrand" value="{{form.pbrand}}"></input<br>
  <label for="pimage">Фото товара:</label><br>
  <input type="file" id="pimage" name="pimage" accept="image/jpeg,image/png,image/gif"><br>
  <label for="pprice">Цена:</label><br>
  <!--   не удалять id pprice -->
  <input type="number" id="pprice" name="pprice" min="0.01" step="0.01" value="{{form.pprice}}"></input>
  <input type="submit" id="addProduct" value="Добавить">
</form>

<script type="text/javascript" src="/static/js/addProduct.js"></script>