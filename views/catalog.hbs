<div class="grey-section">
    <div class="container">
        <div class="goods-cards tab__item active">
            {{#each Products}}
            <div class="goods-cards__item">
                <h4 class="block-title mobile-display" style="font-size: 18px; margin-bottom: 16px;">{{this.productName}}</h4>
                <div class="goods-cards__img">
                    {{#if this.imageExt}}
                    <img src="/static/images/products/{{this.productName}}{{this.imageExt}}" alt="{{this.productName}}">
                    {{else}}
                    <img src="/static/images/products/default.png" alt="{{this.productName}}">
                    {{/if}}
                </div>
                <div class="goods-cards__content">
                    <h4 class="block-title mobile-hidden">{{this.productName}}</h4>
                    <div class="goods-cards__rating rating__group">
                        <label class="rating__star" aria-label="Ужасно">
                            <input class="rating__input" type="radio" name="Protein-Shake" value="1">
                        </label>
                        <label class="rating__star" aria-label="Сносно">
                            <input class="rating__input" type="radio" name="Protein-Shake" value="2">
                        </label>
                        <label class="rating__star" aria-label="Нормально">
                            <input class="rating__input" type="radio" name="Protein-Shake" value="3" checked>
                        </label>
                        <label class="rating__star" aria-label="Хорошо">
                            <input class="rating__input" type="radio" name="Protein-Shake" value="4">
                        </label>
                        <label class="rating__star" aria-label="Отлично">
                            <input class="rating__input" type="radio" name="Protein-Shake" value="5">
                        </label>
                        <div class="rating__focus"></div>
                    </div>
                    <p class="block-text">{{this.productDescription}}</p>
                    {{#if this.brand}}
                        <p class="block-text">Бренд: {{this.brand}}</p>
                    {{/if}}
                    <p class="goods-cards__price px13"><span>{{this.productPrice}} руб.</span></p>
                    <div class="goods-action">
                        <div>
                            <button class="btn-gray" onclick="addToCart('{{this.id}}', this)">В корзину</button>
                        </div>
                        <button class="goods-action-btn">
                            <svg width="13" height="12" viewBox="0 0 13 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M4.57933 0H7.57933V12H4.57933V0ZM9.15888 2.99999H12.1589V12H9.15888V2.99999ZM2.99979 5.99998H-0.000213623V12H2.99979V5.99998Z" fill="#BABABA" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<script type="text/javascript" src="/static/js/cart.js"></script>
