<section class="entry">
       <div class="container">
            <div class="entry__wrapper tabs">
               <div class="entry-header">
                    <a href="#" class="entry-header__button tab__navitem active">Зарегистрироваться</a>
                    <a href="#" class="entry-header__button tab__navitem">Войти</a>
                </div>
                <div class="entry-content">
                    <form action="entry/registration" method="POST" class="js-form-validate entry-content__form tab__item active">
                        <span class="entry-content__label">{{form.messageR}}</span>
                        <input class="entry-content__input" name="name" type="text" placeholder="Имя" value="{{form.name}}">
                        <input class="entry-content__input" name="surname" type="text" placeholder="Фамилия" value="{{form.surname}}">
                        <input class="entry-content__input" type="tel" name="tel"placeholder="Номер телефона" value="{{form.tel}}" data-mask="phone"> 
                        <div class="form-group">
                            <input class="entry-content__input" name="mail" value="{{form.mailR}}" type="email" placeholder="Почта*" data-validate>
                            <span class="some-form__hint">Обязательно для заполнения</span>
                        </div>
                        <div class="form-group">
                            <input class="entry-content__input" name="password" type="password" placeholder="Пароль*" data-validate>
                            <span class="some-form__hint">Обязательно для заполнения</span>
                        </div>
                        <button id="register_sumbit" class="btn-gray entry-content__btn" type="submit">Зарегистрироваться</button>
                    </form>

                     <form action="entry/authentication" method="POST" class="js-form-validate entry-content__form tab__item">
                        <span class="entry-content__label">{{form.messageA}}</span>
                        <div class="form-group">
                            <input class="entry-content__input" name="mail" type="email" placeholder="Почта*" value="{{form.mailA}}" data-validate>
                            <span class="some-form__hint">Обязательно для заполнения</span>
                        </div>
                        <div class="form-group">
                            <input class="entry-content__input" name="password" type="password" placeholder="Пароль*" data-validate>
                            <span class="some-form__hint">Обязательно для заполнения</span>
                        </div>
                        <button id="authenticate_sumbit" class="btn-gray entry-content__btn" type="submit">Войти</button>
                    </form>
                </div>
            </div>
        </div>
	</section> 

